<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD - Lista de Produtos</title>
    <link rel="stylesheet" href="./css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <header>
        <div class="title">
            <h1>CRUD</h1>
        </div>
    </header>

    <main>
        <div class="products-container">
            <ul id="list-products" class="list-group"></ul>
        </div>
        <div class="form-container">
            <h2 style="font-size: 1.5rem; margin-bottom: 1.5rem;">Adicionar Produto</h2>
            <form>
                <div class="mb-3">
                    <label for="nome-produto" class="form-label">Nome do produto</label>
                    <input type="text" name="nome-produto" class="form-control" id="nome-produto">
                </div>
                <div class="mb-3">
                    <label for="descricao" class="form-label">Descrição</label>
                    <input type="text" name="descricao" class="form-control" id="descricao">
                </div>
                <div class="mb-3">
                    <label class="form-check-label" for="quantidade">Quantidade</label>
                    <input type="number" name="quantidade" class="form-control" id="quantidade">
                </div>
                <div class="mb-3">
                    <label class="form-check-label" for="preco">Preço</label>
                    <input type="number" name="preco" class="form-control" id="preco">
                </div>
                <button id="add-produto" type="submit" class="btn btn-primary">Adicionar Produto</button>
            </form>
        </div>
    </main>

    <!-- Modal para mostrar detalhes dos produtos -->
    <div id="modal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalhes do Produto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="modal-form">
                        <div class="mb-3">
                            <label class="form-check-label" for="nome-produto-modal">Nome do produto</label>
                            <input type="text" name="nome-produto-modal" class="form-control" id="nome-produto-modal">
                        </div>
                        <div class="mb-3">
                            <label for="descricao-modal" class="form-label">Descrição</label>
                            <textarea name="descricao-modal" class="form-control" id="descricao-modal" rows="4"></textarea>
                          </div>
                        <div class="mb-3">
                            <label class="form-check-label" for="quantidade-modal">Quantidade</label>
                            <input type="number" name="quantidade-modal" class="form-control" id="quantidade-modal">
                        </div>
                        <div class="mb-3">
                            <label class="form-check-label" for="preco-modal">Preço</label>
                            <input type="number" name="preco-modal" class="form-control" id="preco-modal">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" data-bs-dismiss="modal" id="delete-modal" class="btn btn-secondary">Excluir</button>
                    <button type="button" data-bs-dismiss="modal" id="edit-modal" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="./js/script.js"></script>
</body>
</html>
